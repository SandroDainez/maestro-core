generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  created
  active
  archived
}

enum RunStatus {
  queued
  running
  success
  failed
  cancelled
}

model Tenant {
  id        String   @id @default(uuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())

  projects Project[]
}

model Project {
  id        String        @id @default(uuid())
  slug      String
  name      String
  path      String
  status    ProjectStatus @default(created)
  tenantId String
  tenant   Tenant         @relation(fields: [tenantId], references: [id])

  runs PipelineRun[]

  @@unique([tenantId, slug])
}

model PipelineRun {
  id        String   @id @default(uuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  status    RunStatus @default(queued)
  startedAt DateTime?
  endedAt   DateTime?

  phases PipelinePhaseRun[]

  createdAt DateTime @default(now())
}

model PipelinePhaseRun {
  id      String   @id @default(uuid())
  runId  String
  run    PipelineRun @relation(fields: [runId], references: [id])

  name   String
  status RunStatus @default(queued)

  startedAt DateTime?
  endedAt   DateTime?

  logs String?

  createdAt DateTime @default(now())
}

