generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())

  projects Project[]
  users    TenantUser[]
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  passwordHash String?
  createdAt    DateTime @default(now())

  tenants TenantUser[]
}

model TenantUser {
  id       String @id @default(uuid())
  userId   String
  tenantId String

  user   User   @relation(fields: [userId], references: [id])
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@unique([userId, tenantId])
}

model Project {
  id        String   @id @default(uuid())
  slug      String   @unique
  name      String
  path      String
  status    String
  createdAt DateTime @default(now())

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  pipelineRuns     PipelineRun[]
  productAnalyses  ProductAnalysis[]
}

model PipelineRun {
  id         String   @id @default(uuid())
  projectId  String
  type       String
  status     String
  startedAt  DateTime
  finishedAt DateTime?

  score      Int?
  riskLevel  String?
  analysis   Json?

  project Project @relation(fields: [projectId], references: [id])
}

model ProductAnalysis {
  id                  String   @id @default(uuid())

  projectId           String
  project             Project  @relation(fields: [projectId], references: [id])

  overallScore        Int
  stabilityScore      Int
  architectureScore   Int
  securityScore       Int
  maturityScore       Int

  riskLevel           String   // LOW | MODERATE | HIGH | CRITICAL

  details             Json?    // relat√≥rio completo estruturado

  createdAt           DateTime @default(now())

  @@index([projectId])
}
