generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RunStatus {
  queued
  running
  success
  failed
}

enum PhaseStatus {
  queued
  running
  success
  failed
}

model Tenant {
  id        String    @id @default(uuid())
  slug      String    @unique
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id        String   @id @default(uuid())
  tenantId String
  tenant   Tenant   @relation(fields: [tenantId], references: [id])

  slug      String
  name      String
  path      String
  status    String   @default("active")

  createdAt DateTime @default(now())

  runs PipelineRun[]

  @@unique([tenantId, slug])
}

model PipelineRun {
  id        String   @id @default(uuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  status    RunStatus @default(queued)

  startedAt DateTime?
  endedAt   DateTime?

  createdAt DateTime @default(now())

  phases PipelinePhaseRun[]
}

model PipelinePhaseRun {
  id        String   @id @default(uuid())

  runId String
  run   PipelineRun @relation(fields: [runId], references: [id])

  phase  String
  status PhaseStatus

  logs String?

  startedAt DateTime?
  endedAt   DateTime?

  createdAt DateTime @default(now())

  @@index([runId])
}

